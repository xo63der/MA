\def\ps@firstpage{
  \renewcommand{\baselinestretch}{1.0}
  \ifcase \@ptsize\relax \normalsize \or \small \or \footnotesize \fi
  \headheight16pt\headsep17mm
  \def\@oddhead{
    \unitlength1mm
    \begin{picture}(0,0)
      \put(40,  0){\parbox{125mm}{\raggedleft\fontsize{11.9pt}{13.0pt}\selectfont\university}}
      \put(40, -8){\parbox{125mm}{\raggedleft\fontsize{15.00pt}{16.87pt}\selectfont\bf\lfe}}
      \put(40,-14){\parbox{125mm}{\raggedleft\fontsize{12.85pt}{14.65pt}\selectfont(\name)}}
      \put(-4,-10){\parbox{50mm}  {\includegraphics[width=2cm]{\logoimg}}}
      \put(+88.5,-1.8){\rule{76.5mm}{0.45pt}}
      \put(+102,-2.7){\rule{63mm}{2.7pt}}
    \end{picture}
    \hfill}
  \def\@oddfoot{}
  \def\@evenhead{\@oddhead} \def\@evenfoot{\@oddfoot}}


\newenvironment{dbvbody}{
  \thispagestyle{firstpage}
  \setlength\unitlength{1mm}

  \c@page\@ne
  \interlinepenalty=200
  \clearpage

  \hfill{}\hfill \makebox[37.0mm][r]{

    \begin{tabular}{@{}r@{}}
      \datumtext{} \datum
    \end{tabular}}\par

  \vspace{5mm}
  \begin{center}
  \renewcommand{\baselinestretch}{1.70}\normalsize
  \ifx \title\empty \else {\fontsize{24.88pt}{29.86pt}\selectfont\bf\textsf\title} \par \fi\nobreak
  \vspace{3mm}
  \nobreak\ifx \subtitle\empty \else{\fontsize{17.28pt}{20.74pt}\selectfont\textsf\subtitle} \par \fi\nobreak
